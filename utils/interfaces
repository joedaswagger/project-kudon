from abc import ABC, abstractmethod
from typing import Iterable, Tuple
import numpy as np

class AudioChunk:
    def __init__(self, samples: np.ndarray, sample_rate: int, start_time: float):
        self.samples = samples   # shape (N,), float32 or int16
        self.sample_rate = sample_rate
        self.start_time = start_time

class AbstractAudioSource(ABC):
    @abstractmethod
    def stream_chunks(self) -> Iterable[AudioChunk]:
        """Yield sequential chunks of audio."""
        pass